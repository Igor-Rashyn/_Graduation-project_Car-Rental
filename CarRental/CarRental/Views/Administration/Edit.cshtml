@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ResAdministration.Administration_Edit.EditRole</h2>

@Html.ActionLink(ResAdministration.Administration_Edit.ListRoles, "Index") | @Html.ActionLink(ResAdministration.Administration_Edit.Manage, "ManageUserRoles")
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    <div>
       @ResAdministration.Administration_Edit.RoleName
    </div>
    <p>
        @Html.TextBoxFor(model => model.Name)
    </p>
    <input type="submit" value='@ResAdministration.Administration_Edit.Save' />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}